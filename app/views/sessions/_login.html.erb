
<br><br>
<div class="form-info"><center>
     <%= form_for login, method: "POST" do |f| %>
     <div>
        <%= f.label 'Email' %>
        <%= f.text_field :email, :required => true %>
         </div>
    <br>
    <div>
        <%= f.label 'Password' %>
        <%= f.password_field :password, :required => true %>
    </div><br>
    <%= f.submit 'Log In' %>
    <br><br>

<% end %>
</div></center>
